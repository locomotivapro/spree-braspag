<% param_prefix = "payment_source[#{payment_method.id}]" %>
<% options_hash = Rails.env.production? ? {:autocomplete => 'off'} : {} %>

<div class="well">
  <div class="row">
    <div class="col-md-7">
      <p class="field" data-hook="payment_method">
      <%= label_tag nil, 'Bandeira do cartão' %><br />
      <label class="checkbox-inline" for="">
        <%= radio_button_tag "#{param_prefix}[cc_type]", "Amex" %> Amex
      </label>
      <label class="checkbox-inline" for="">
        <%= radio_button_tag "#{param_prefix}[cc_type]", "Visa" %> Visa
      </label>
      <label class="checkbox-inline" for="">
        <%= radio_button_tag "#{param_prefix}[cc_type]", "Mastercard" %> Mastercard
      </label>
      <label class="checkbox-inline" for="">
        <%= radio_button_tag "#{param_prefix}[cc_type]", "Diners" %> Diners
      </label>
      <label class="checkbox-inline" for="">
        <%= radio_button_tag "#{param_prefix}[cc_type]", "Elo" %> Elo
      </label>
      </p>
    </div>
    <div class="col-md-5">
      <%= image_tag 'creditcards/creditcard.gif', :id => 'creditcard-image' %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-6">
      <p class="field">
      <label for=""><%= Spree.t(:holder) %></label><span class="required">*</span>
      <%= text_field_tag "#{param_prefix}[name]", '', options_hash.merge(:id => 'holder', :class => 'required form-control', :size => 40, :maxlength => 100) %>
      </p>
    </div>
    <div class="col-md-6">
      <p class="field" data-hook="card_number">
      <%= label_tag nil, t(:card_number) %>
      <span class="required">*</span>
      <% options_hash = Rails.env.production? ? {:autocomplete => 'off'} : {} %>
      <%= text_field_tag "#{param_prefix}[number]", '', options_hash.merge(:id => 'card_number', :class => 'required form-control', :size => 19, :maxlength => 19) %>
      &nbsp;
      <span id="card_type" style="display:none;">
        ( <span id="looks_like" ><%= t(:card_type_is) %> <span id="type"></span></span>
        <span id="unrecognized"><%= t(:unrecognized_card_type) %></span>
        )
      </span>
      </p>
    </div>

    <div class="col-md-3">
      <p class="field" data-hook="card_code">
      <%= label_tag nil, t(:security_code) %>
      <span class="required">*</span><br>
      <%= text_field_tag "#{param_prefix}[verification_value]", '', options_hash.merge(:id => 'security_code', :class => 'required form-control', :size => 5) %>
      <%#= link_to "(#{t(:whats_this)})", spree.content_path('cvv'), :target => '_blank', :onclick => "window.open(this.href,'cvv_info','left=20,top=20,width=500,height=500,toolbar=0,resizable=0,scrollbars=1');return false", "data-hook" => "cvv_link" %>
      </p>
    </div>

    <div class="col-md-2">
      <p class="field" data-hook="card_expiration">
      <%= label_tag nil, 'Validade (mês)' %>
      <span class="required">*</span>
      <%= select_month(Date.today, { :prefix => param_prefix, :field_name => 'month', :use_month_numbers => true }, :class => 'form-control required') %>
      </p>
    </div>

    <div class="col-md-2">
      <p class="field" data-hook="card_expiration">
      <%= label_tag nil, 'Validade (ano)' %>
      <span class="required">*</span>
      <%= select_year(Date.today, { :prefix => param_prefix, :field_name => 'year', :start_year => Date.today.year, :end_year => Date.today.year + 15 }, :class => 'form-control required') %>
      </p>
    </div>


    <div class="col-md-4">
      <p class="field" data-hook="parcels">
      <%= label_tag nil, t(:parcels) %>
      <span class="required">*</span><br>
      <% installments_array = Spree::Braspag::Utils.payment_parcels_array(@order.total, payment_method.preferences[:max_parcels], payment_method.preferences[:minimun_parcel_value], self) %>
      <%= select_tag "#{param_prefix}[installments]", options_for_select(installments_array), class: 'form-control required'  %>
      </p>
    </div>

  </div>
</div>
